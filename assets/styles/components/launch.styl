#gradient-bg {
    width: 100%;
    height: 100vh;
    background: linear-gradient(rgb(23, 40, 87), rgb(29, 98, 156), rgb(196, 149, 186) 90%);
    display: flex;
    justify-content: flex-start;
    position: relative;
    align-items: center;
    color: white;
    transition: all 1000ms linear;
    z-index: 1;

    &:after {
        content: '';
        top: 100%;    
        position: absolute;
        width: 100%;
        height: 250%;
        background: linear-gradient(rgba(255, 255, 255, 0) 5%, rgb(196, 149, 186) 75%);
            
    }

    &.reveal-scene {
        opacity: 0;
        transition-delay: 2000ms;
        &:after {
            content: '';
            top: -150%;
            transition: top 1000ms linear;
            transition-delay: 1000ms;
        }
    }


    // Sun
    .sun {
        position: absolute;
        left: 50%; top: 50%;
        transform: translate(-50%, -50%);
        width: 435px;
        height: 435px;
        border-radius: 50%;
        background: linear-gradient(-140deg, rgb(234, 189, 156), rgb(230, 98, 153));
        transition: left 2000ms ease-out;
        box-shadow: 0 0 0 0 rgba(#5a99d4, .5);
        animation: pulse 1.5s infinite;

        &.moving-sun {
            left: calc(100% - 100px);
            img {
                opacity: 0; 
            }

            animation: none;
        }

        img  {
            transform: translateX(-50%);
            position: absolute;
            width: 78px;
            bottom: 25px;
            left: 50%;
            transition: opacity 1000ms ease-out;
        }
    }
    
    // Main intro
    .main-intro {
        position: relative;
        transition: opacity 500ms ease-out;
        transition-delay: 1000ms;
        margin-left: 200px;
        opacity: 0;

        &.reveal {
            opacity: 1;
        }

        h1 {
            font-size: 9rem;
            margin: 0;
        }

        p {
            font-family: Lora;
            font-size: 1.4rem;
            line-height: 20px;
            max-width: 343px;
            margin: 0 0 36px 0;
        }   
    }
}


// buttons
#next {
    position: fixed;
    top: 0;
    left: 0;
}

a:visited, a:focus, a:active, a {
    outline: 0;
    text-transform: none;
    text-decoration: none;
    color: inherit;
}

#start-xp {
  opacity : 1;
  transition: all 250ms ease-out;
  &.hidden-state {
    opacity: 0;
  }
}

.redirect-link {
    position: relative;
    font-size: 1.6rem;
    font-family: Lora;
    padding: 9px 30px 13px 30px;
    border: 1px solid rgba(255, 255, 255, .3);
    text-transform: lowercase;
    transition: all 200ms ease-out;


    &:hover {
        border-color: rgba(255, 255, 255, 1); 
    }

    &:after {
        content: '';
        position: absolute;
        top: 50%;
        right: -25%;
        width: 45px;
        height: 2px;
        background-color: white;
    }
}